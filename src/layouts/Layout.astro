import "@fontsource/poppins/900.css";

import { SEO } from "astro-seo";
const canonicalURL = new URL(Astro.url.pathname, Astro.url.origin).toString();
const resolvedImageWithDomain = new URL(
  "/image.jpeg",
  Astro.url.origin
).toString();

interface Props {
  title: string;
}


const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
import preload from "astro-preload";
import Glow from "../components/Glow";
const makeTitle = "Arpit Nakrani";
---

<!doctype html>
<html lang="en">
  <head>
   
    <link rel="icon" type="image/x-icon" href="/image.ico" />
    
    
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-S9TKKTL84G"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-S9TKKTL84G");
    </script>

    <title>{makeTitle}</title>
  </head>
  <body>
    <Glow client:only />
    <slot />

    <style is:global>
      * {
      }
      img {
        content-visibility: auto;
      }
      body {
        cursor: url("/cursor.png"), auto;
        font-family: "Poppins", sans-serif;
        background: #0a0a0a;
        background-size: 22px 22px;
        overflow-x: hidden;
      }
      ::-webkit-scrollbar {
        width: 10px;
      }

      ::-webkit-scrollbar-track {
        background-color: rgba(20, 20, 20);
        -webkit-border-radius: 10px;
        border-radius: 10px;
      }

      ::-webkit-scrollbar-thumb {
        -webkit-border-radius: 10px;
        border-radius: 10px;
        background: #5b5b5b;
      }
    </style>
    <script src="../utils/aos.js"></script>
  </body>
</html>
